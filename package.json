{
  "name": "tensorHVAC-Pro-Launcher",
  "version": "2025.1.2",
  "description": "Validate the license and launch the tensorHVAC-Pro Setup app",
  "author": "PT Tensor",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "keytar": "^7.9.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.5"
  },
  "build": {
  "appId": "com.pttensor.licenseapp",
  "productName": "Launcher tensorHVAC-Pro",
  "asar": true,
  "files": [
    "main.js",
    "preload.cjs",
    "services/**/*",
    "src/**/*",
    "package.json"
  ],
  "extraResources": [
    {
      "from": "license-cache.json",
      "to": "license-cache.json"
    }
  ],
  "directories": {
    "buildResources": "assets",
    "output": "dist"
  },
  "win": {
    "target": "nsis",
    "icon": "assets/icon.ico"
  }
}

}